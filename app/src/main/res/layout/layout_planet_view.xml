<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/planet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="国漫星"
        android:textColor="#AAFFFFFF" />

    <ImageView
        android:id="@+id/planet_icon"
        android:layout_width="@dimen/planet_width"
        android:layout_height="@dimen/planet_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/planet_top_space"
        android:src="@drawable/planet_default_star" />

    <ImageView
        android:id="@+id/planet_icon_select"
        android:layout_width="@dimen/planet_width"
        android:layout_height="@dimen/planet_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/planet_top_space"
        android:src="@drawable/planet_default_star" />

</FrameLayout>